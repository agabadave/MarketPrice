@model IEnumerable<MarketPrice.Models.Market>

@{
    ViewBag.Title = "Home";
}

<div>
    <h1>Market Prices</h1>
    
    <p>
        List of Markets registered in Kampala.
    </p>
    
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.Name</td>
                        <td>@m.Address</td>
                        <td>@Html.ActionLink("View", "Market", "Home", new { id = m.Id }, null)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <div>
        @Html.Action("Commodities")
    </div>
</div>